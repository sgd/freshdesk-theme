<section class="popular-topics">
  <div class="popular-topics__inner">
    <h3 class="main-section-title">
      Popular Topics
    </h3>
    <div class="popular-topics__list">
      {% assign count = 0 %}
        {% for category in portal.solution_categories %}
          {% for folder in category.folders %}
            {% for article in folder.articles %}
              {% for tag in article.tags %}
                  {% if tag.name == 'popular' %}
                    {% assign count = count | plus: 1  %}
                    {% if count <= 6 %}
                      <div class="popular-topics__item">
                        <h3 class="popular-topics__item-title">
                          <a href="{{ article.url }}">
                            {{ article.title }}
                          </a>
                        </h3>
                        <p class="popular-topics__item-description">
                          {{ article.body_plain | truncate: 100 }}
                          <a href="{{ article.url }}" class="popular-topics__item-link">
                            Read&nbsp;&#8594;
                          </a>
                        </p>
                      </div>
                    {% endif %}
                  {% endif %}
              {% endfor %}
            {% endfor %}
          {% endfor %}
        {% endfor %}
    </div>
    <a href="{{ portal.solutions_home_url }}" class="x-btn x-btn-primary">
      View All Articles
    </a>
  </div>
</section>

